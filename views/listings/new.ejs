<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm border-0 p-4">
            <h3 class="mb-4">Add a New Product Listing</h3>
            <!-- ACTION: /listings, METHOD: POST -->
            <form method="POST" action="/listings" class="needs-validation" novalidate 
                enctype="multipart/form-data">
                
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" id="title" class="form-control" placeholder="e.g. Premium Double-Walled Water Bottle" required>
                    <div class="invalid-feedback">Please enter a title.</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" id="description" class="form-control" placeholder="Describe your product in detail" required></textarea>
                    <div class="invalid-feedback">Please enter a detailed description.</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Product Image</label>
                    <!-- File input for image upload -->
                    <input type="file" name="listing[image]" id="image" class="form-control" required>
                    <div class="invalid-feedback">Please choose an image file.</div>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price (PKR)</label>
                    <input type="number" name="listing[price]" id="price" class="form-control" placeholder="PKR" required min="0">
                    <div class="invalid-feedback">Please enter a valid price.</div>
                </div>

                <div class="d-grid gap-2 d-md-block mt-4">
                    <button class="btn btn-dark btn-lg">Create Listing</button>
                    <a href="/listings" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>